<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.greenvile.view.ResidentController">
    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Search..." prefWidth="200"/>
        <Button text="Search" onAction="#onSearch"/>
    </HBox>
    <ListView fx:id="residentListView" prefHeight="300"/>
    <HBox spacing="10">
        <Button text="Add" onAction="#onAdd"/>
        <Button fx:id="updateButton" text="Update" onAction="#onUpdate"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#onDelete"/>
    </HBox>
</VBox>
